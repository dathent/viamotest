<config>
    <tabs>
        <viamo_test translate="label" module="viamo_test">
            <label>Viamo Test</label>
            <sort_order>200</sort_order>
        </viamo_test>
    </tabs>
    <sections>
        <viamo_test translate="label" module="catalog">
            <class>separator-top</class>
            <label>Viamo Test</label>
            <tab>viamo_test</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <manager_id translate="label">
                            <label>Default Manager</label>
                            <frontend_type>select</frontend_type>
                            <source_model>viamo_test/resource_manager_collection</source_model>
                            <backend_model>viamo_test/system_config_backend</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manager_id>
                        <amount translate="label comment">
                            <label>Amount for prepare orders</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>viamo_test/system_config_backend</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </amount>
                    </fields>
                </configuration>
            </groups>
        </viamo_test>
    </sections>
</config>
